<Letter>:
    source: root.fname

<LoadingScreen>:
    AnchorLayout:
        anchor_x : 'center'
        anchor_y : 'center'
        Image:
            id: gif
            canvas:
                Color:
                    rgba: 0, 0, 0,0
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1,1
            allow_stretch: True
            keep_ratio: False
            source: 'LDS.gif'
            anim_delay: 0.08
            anim_loop: 100

    Button:
        size_hint: .2,.1
        size: 20,7
        #text: "Start"
        pos_hint:{"center_x":0.5,"center_y":0.25}
        background_normal: 'Start.png'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.transition.duration = 0
            root.manager.current = 'screen_one'


